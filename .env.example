# Google Ads API Configuration
GOOGLE_ADS_YAML=/etc/google-ads/google-ads.yaml
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
GOOGLE_ADS_CLIENT_ID=your_client_id_here
GOOGLE_ADS_CLIENT_SECRET=your_client_secret_here
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token_here
GOOGLE_ADS_LOGIN_CUSTOMER_ID=1234567890

# JWT Configuration
JWT_JWKS_PRIVATE_PATH=/etc/ads-api/jwks-private.json
JWT_JWKS_PUBLIC_PATH=/etc/ads-api/jwks-public.json
API_JWT_AUDIENCE=ads-api
API_JWT_ISSUER=ads-auth
JWT_ALGORITHM=RS256
JWT_EXPIRY_MINUTES=15

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_KEEPALIVE=true
REDIS_SOCKET_TIMEOUT=5

# PostgreSQL Configuration
DATABASE_URL=postgresql://user:pass@localhost:5432/google_ads
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=50

# Application Settings
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=6
APP_LOG_LEVEL=INFO

# Cache Settings
LRU_CACHE_SIZE=10000
CACHE_DEFAULT_TTL=300

# Quota Settings
GLOBAL_DAILY_QUOTA=1000000
DEFAULT_CLIENT_QUOTA=10000

# Scheduler Settings
SCHEDULER_WORKERS=8
